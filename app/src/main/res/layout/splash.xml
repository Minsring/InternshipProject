<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forsythia">

    <TextView
        android:id="@+id/splashImg"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:drawableTop="@drawable/grand"
        android:fontFamily="@font/typo_dabanggu"
        android:text="또보기"
        android:textColor="#784118"
        android:textSize="80sp"
        android:gravity="center"
        android:background="@drawable/splash_circle_background"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pork_3"
        android:gravity="right"
        android:text="Made by 강민슬 구윤모 김민옥 엄소연 이희정"
        android:textColor="#AD8D75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>